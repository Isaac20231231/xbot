        "parameters": [
          {
            "name": "wxid",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "目标微信ID"
          }
        ],
        "responses": {
          "200": {
            "description": "切换成功或需扫码登录",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "message": { "type": "string" },
                    "error": { "type": "string" }
                  }
                }
              }
            }
          },
          "401": { "description": "未认证" }
        }
      }
    },
    "/accounts/refresh/{wxid}": {
      "get": {
        "summary": "刷新账号信息",
        "description": "刷新指定 wxid 的账号信息，需认证。",
