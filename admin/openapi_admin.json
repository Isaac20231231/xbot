        "parameters": [
          {
            "name": "wxid",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "目标微信ID"
          }
        ],
        "responses": {
          "200": {
            "description": "刷新成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "data": { "$ref": "#/components/schemas/Account" },
                    "error": { "type": "string" }
                  }
                }
              }
            }
          },
          "401": { "description": "未认证" }
        }
      }
    },
    "/accounts/{wxid}": {
      "delete": {
        "summary": "删除账号",
        "description": "删除指定 wxid 的账号，需认证。不能删除当前登录账号。",
        "tags": ["账号管理"],
        "parameters": [
          {
            "name": "wxid",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "目标微信ID"
          }
        ],
        "responses": {
          "200": {
            "description": "删除成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "message": { "type": "string" },
                    "error": { "type": "string" }
                  }
                }
              }
            }
          },
          "401": { "description": "未认证" }
        }
      }
    },
    "/friend_circle/list": {
      "get": {
        "summary": "获取朋友圈列表",
        "description": "获取当前或指定用户的朋友圈列表，支持分页、关键词、时间过滤，需认证。",
        "tags": ["朋友圈"],
        "parameters": [
          { "name": "wxid", "in": "query", "schema": { "type": "string" }, "description": "用户微信ID" },
          { "name": "keyword", "in": "query", "schema": { "type": "string" }, "description": "搜索关键词" },
          { "name": "date_start", "in": "query", "schema": { "type": "string" }, "description": "开始日期" },
          { "name": "date_end", "in": "query", "schema": { "type": "string" }, "description": "结束日期" },
          { "name": "refresh", "in": "query", "schema": { "type": "boolean" }, "description": "是否强制刷新" },
          { "name": "max_id", "in": "query", "schema": { "type": "integer" }, "description": "分页ID" },
          { "name": "page", "in": "query", "schema": { "type": "integer" }, "description": "页码" },
          { "name": "limit", "in": "query", "schema": { "type": "integer" }, "description": "每页数量" }
        ],
        "responses": {
          "200": {
            "description": "成功返回朋友圈列表",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "data": {
                      "type": "object",
                      "properties": {
                        "items": { "type": "array", "items": { "$ref": "#/components/schemas/FriendCircle" } },
                        "total": { "type": "integer" },
                        "page": { "type": "integer" },
                        "limit": { "type": "integer" },
                        "last_id": { "type": "integer" },
                        "has_more": { "type": "boolean" }
                      }
                    },
                    "error": { "type": "string" }
                  }
                }
              }
            }
          },
          "401": { "description": "未认证" }
        }
      }
    },
    "/system/restart": {
